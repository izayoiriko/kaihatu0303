<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="table-task">
      <tbody>
        <tr>
          <th class="active col-md-2">ID</th>
          <td class="col-md-10"><%= @user.name %></td>
        </tr>
        <tr>
          <th class="active col-md-2">名称</th>
          <td><%= Task.find(params[:id]).work%></td>
        </tr>
        <tr>
          <th class="active col-md-2">詳細</th>
          <td><%= Task.find(params[:id]).details%></td>
        </tr>
        <tr>
          <th class="active col-md-2">作成日</th>
          <td><%= Task.find(params[:id]).created_at%></td>
        </tr>
        <tr>
          <th class="active col-md-2">更新日</th>
          <td><%= Task.find(params[:id]).updated_at%></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

