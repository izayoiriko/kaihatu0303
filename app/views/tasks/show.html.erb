<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="table-task">
      <tbody>
        <tr>
          <th class="active col-md-2">ID</th>
          <td class="col-md-10"><%= @user.name %></td>
        </tr>
        <tr>
          <th class="active col-md-2">名称</th>
          <td><%= @task.work %></td>
        </tr>
        <tr>
          <th class="active col-md-2">詳細</th>
          <td><%= text_url_to_link(@task.details).html_safe %></td>
        </tr>
        <tr>
          <th class="active col-md-2">作成日</th>
          <td><%= @task.created_at %></td>
        </tr>
        <tr>
          <th class="active col-md-2">更新日</th>
          <td><%= @task.updated_at %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "編集", edit_user_task_path(@user, @task), class: "btn btn-lg btn-success" %>
    <%= link_to "削除", user_task_path(current_user), method: :delete,
        data: { confirm: "#{@task.work}を削除します。よろしいですか？"},
        class: "btn btn-lg btn-danger" %>
  </div>
</div>

