<% provide(:title, "Edit Task") %>

<h1>タスク編集</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
        <%= render "shared/error_messages", obj: @task %>
      
        <%= f.label :"名称", class: "label-form" %>
        <%= f.text_field :work, class: "form-control" %>
        
        <%= f.label :"詳細", class: "label-form" %>
        <%= f.text_area :details, rows: 5, class: "form-control" %>
        <!--未完↓-->
        <%= f.submit "更新", class: "btn btn-lg btn-primary btn-form" %>
        <!--redirect?↓-->
        <%= f.submit "キャンセル", class: "btn btn-lg btn-form" %>
      <% end %>
    </div>
  </div>